@article{Kerber2023,
  title = {Zn({{II}}) to {{Ag}}({{I}}) {{Swap}} in {{Rad50 Zinc Hook Domain Leads}} to {{Interprotein Complex Disruption}} through the {{Formation}} of {{Highly Stable Ag}}{\textsubscript{x}} ({{Cys}}){\textsubscript{y}} {{Cores}}},
  author = {Kerber, Olga and Tran, J{\'o}zef and Misiaszek, Alicja and Chor{\k{a}}{\.z}ewska, Aleksandra and Bal, Wojciech and Kr{\k{e}}{\.z}el, Artur},
