  keywords = {interprotein metal binding site,metal affinity,metalloprotein,zinc buffering,zinc fluctuations},
  file = {C\:\\Users\\makro\\Zotero\\storage\\ILU4PL5A\\1-s2.0-S0968000420302085-main.pdf}
}

