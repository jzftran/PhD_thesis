  title = {Galvanization of {{Protein}}\textendash{{Protein Interactions}} in a {{Dynamic Zinc Interactome}}},
  author = {Kocy{\l}a, Anna and Tran, J{\'o}zef Ba and Kr{\k{e}}{\.z}el, Artur},
