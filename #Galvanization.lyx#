\begin_layout Plain Layout

def n2w(n):
\end_layout

\begin_layout Plain Layout

    try:
\end_layout

\begin_layout Plain Layout

        return (num2words[n])
\end_layout

\begin_layout Plain Layout

    except KeyError:
\end_layout

\begin_layout Plain Layout

        try:
\end_layout

\begin_layout Plain Layout

            return ((num2words[n-n % 10]) + ' ' + (num2words[n % 10].lower()))
\end_layout

\begin_layout Plain Layout

        except KeyError:
\end_layout

\begin_layout Plain Layout

            return ('Number out of range')
\end_layout

\begin_layout Plain Layout

\end_layout

